<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/dark_green_blue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/dark_green_blue"
        android:weightSum="4"
        android:layout_margin="0dp">
    <TextView
        android:id="@+id/tv_drawer"
        android:drawableStart="@drawable/burger"
        style="@style/toolbarLayout"
        android:layout_gravity="start"
        android:layout_width="wrap_content" />
    <TextView

        android:id="@+id/tv_title"
        style="@style/toolbarLayout"
        android:layout_weight="3.8"
        android:gravity="center"
        android:textSize="@dimen/largetextsize"
        android:textColor="@color/white"
        android:padding="@dimen/marginverysmall"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/ib_grid"
        style="@style/toolbarLayout"
        android:layout_height="match_parent"
        />
        <ImageButton
            android:id="@+id/ib_bar"
            style="@style/toolbarLayout"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>